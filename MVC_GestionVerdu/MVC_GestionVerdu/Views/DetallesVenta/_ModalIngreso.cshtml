@model MVC_GestionVerdu.ViewModels.VentaViewModel

<!-- Modal para Agregar/Editar Ingresos -->
<div class="modal fade" id="modalIngreso" tabindex="-1" aria-labelledby="modalIngresoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="modalIngresoLabel">Registrar Ingreso</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="formIngreso" method="post">
                    <!-- Campo oculto para el ID (usado al editar) -->
                    <input asp-for="Id" type="hidden" id="IdDetalleVenta"  />

                    <div class="mb-3">
                        <label asp-for="Fecha" class="form-label fw-bold">Fecha:</label>
                        <input asp-for=Fecha type="date" class="form-control" id="Fecha" name="Fecha" required>
                        <span asp-validation-for="Fecha" class="invalid-feedback"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MetodoPagoId" class="form-label fw-bold">Método de Pago:</label>
                        <select asp-for="MetodoPagoId" class="form-select" id="MetodoPagoId"  required>
                            <option value="">Seleccionar</option>
                            @foreach (var metodo in ViewBag.MetodoPago)
                            {
                                <option value="@metodo.IdMetodoPago">@metodo.Descripcion</option>
                            }
                        </select>
                        <span asp-validation-for="MetodoPagoId" class="invalid-feedback"></span>

                    </div>

                    <div class="mb-3">
                        <label asp-for="Concepto" class="form-label fw-bold">Concepto:</label>
                        <input asp-for="Concepto" type="text" class="form-control" id="Concepto" placeholder="Descripción del ingreso" required>
                        <span asp-validation-for="Concepto" class="invalid-feedback"></span>

                    </div>

                    <div class="mb-3">
                        <label asp-for="Monto" class="form-label fw-bold">Monto:</label>
                        <input asp-for="Monto" type="number" class="form-control" id="Monto" placeholder="Ingrese el monto" required>
                        <span asp-validation-for="Monto" class="invalid-feedback"></span>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="submit" form="formIngreso" class="btn btn-success">Guardar</button>
            </div>
        </div>
    </div>
</div>


<input type="hidden" id="tempMensaje" value="@TempData["MensajeIngresos"]" />
<input type="hidden" id="tempTipoMensaje" value="@TempData["TipoMensajeIngresos"]" />