@model IEnumerable<MVC_GestionVerdu.Models.DetallesVenta>


    <h1>Ingresos</h1>


<div class="row mb-3">
    <div class="col-md-3">
        <label for="filtroMetodoPago" class="form-label">Método de Pago:</label>
        <select id="filtroMetodoPago" class="form-select">
            <option value="">Todos</option>
            <option value="Efectivo">Efectivo</option>
            <option value="Tarjeta">Tarjeta</option>
            <option value="Transferencia">Transferencia</option>
        </select>
    </div>
    <div class="col-md-3">
        <label for="fechaInicio" class="form-label">Desde:</label>
        <input type="date" id="fechaInicio" class="form-control">
    </div>
    <div class="col-md-3">
        <label for="fechaFin" class="form-label">Hasta:</label>
        <input type="date" id="fechaFin" class="form-control">
    </div>
    <div class="col-md-3 d-flex align-items-end">
        <button class="btn btn-primary w-100" onclick="filtrarIngresos()">Filtrar</button>
    </div>
</div>

<div class="alert alert-info mt-3">
    <strong>Total de Ingresos: </strong> <span id="totalIngresos">$0.00</span>
</div>

<div class="mt-3 text-center">
    <a asp-controller="DetallesVenta" asp-action="AgregarVenta" class="btn btn-success">Agregar Ingreso</a>
</div>





<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h5>Lista de Ingresos</h5>
        </div>
        <div class="card-body">
            <table id="tablaIngresos" class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Fecha</th>
                        <th>Método de Pago</th>
                        <th>Concepto</th>
                        <th>Monto ($)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ingreso in Model)

                    {
                        <tr class="producto-row">
                            <td class="fecha">@ingreso.Fecha.ToString("yyyy-MM-dd")</td>
                            <td class="metodo-pago">@ingreso.MetodoPago.Descripcion</td>
                            <td>@ingreso.Concepto</td>
                            <td class="monto">@ingreso.Monto.ToString("C")</td>
                            <td>
                                <a asp-action="Editar" asp-route-id="@ingreso.IdDetalleVenta" class="btn btn-sm btn-warning">Editar</a>
                                <a href="javascript:void(0);" class="btn btn-sm btn-danger" onclick="confirmarEliminacion(@ingreso.IdDetalleVenta,'/DetallesVenta/Eliminar')">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/FiltroIngresos.js" asp-append-version="true"></script>
   
}
