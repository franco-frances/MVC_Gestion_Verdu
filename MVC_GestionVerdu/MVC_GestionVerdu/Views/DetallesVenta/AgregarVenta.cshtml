@model MVC_GestionVerdu.Models.DetallesVenta

<div class="container mt-5">
    <h2 class="text-center mb-4">Registrar Ingreso</h2>

    @if (TempData["MensajeVenta"] != null)

    {
        <div class="alert alert-success alert-dismissible fade show text-center mx-auto w-50" role="alert">
            @TempData["MensajeVenta"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-center">
        <form asp-action="AgregarVenta" method="post" class="border p-4 rounded bg-light shadow-sm w-50">
            <div class="mb-3">
                <label asp-for="Fecha" class="form-label fw-bold"></label>
                <input asp-for="Fecha" class="form-control" type="date" required>
            </div>

            <div class="mb-3">
                <label asp-for="MetodoPagoId" class="form-label fw-bold"></label>
                <select asp-for="MetodoPagoId" class="form-select" required>
                    <option value="">Seleccionar</option>
                    @foreach (var metodo in ViewBag.MetodoPago)

                    {
                        <option value="@metodo.IdMetodoPago">@metodo.Descripcion</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="Concepto" class="form-label fw-bold"></label>
                <input asp-for="Concepto" class="form-control" placeholder="Descripción del ingreso" required>
            </div>

            <div class="mb-4">
                <label asp-for="Monto" class="form-label fw-bold"></label>
                <input asp-for="Monto" class="form-control" type="number" step="0.01" placeholder="Ingrese el monto" required>
            </div>

            <!-- Contenedor para centrar los botones y distribuirlos con espacio -->
            <div class="d-flex justify-content-center gap-3">
                <button type="submit" class="btn btn-success btn-lg px-4">Registrar Ingreso</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg px-4">Cancelar</a>
            </div>
        </form>
    </div>
</div>
