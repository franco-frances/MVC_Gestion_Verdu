@model MVC_GestionVerdu.Models.DetallesVenta


<div class="container mt-5">
    <h2 class="text-center mb-4">Registrar Ingreso</h2>
    <form asp-action="AgregarVenta" method="post" class="border p-4 rounded bg-light shadow-sm">
        <div class="form-group">
            <label asp-for="Fecha"></label>
            <input asp-for="Fecha" class="form-control" type="date" required>
        </div>

        <div class="form-group">
            <label asp-for="MetodoPagoId"></label>
            <select asp-for="MetodoPagoId" class="form-control" required>
                <option value="">Seleccionar</option>
                @foreach (var metodo in ViewBag.MetodoPago)

                {
                    <option value="@metodo.IdMetodoPago">@metodo.Descripcion</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Concepto"></label>
            <input asp-for="Concepto" class="form-control" placeholder="Descripción del ingreso" required>
        </div>

        <div class="form-group">
            <label asp-for="Monto"></label>
            <input asp-for="Monto" class="form-control" type="number" step="0.01" placeholder="Ingrese el monto" required>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success btn-lg">Registrar Ingreso</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg ml-2">Cancelar</a>
        </div>


        @if (TempData["MensajeVenta"] != null)



        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["MensajeVenta"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }


    </form>
</div>