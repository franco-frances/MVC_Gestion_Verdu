@model IEnumerable<Producto>



@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar vh-100">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column text-white">
                    <li class="nav-item">
                        <a class="nav-link active text-white" href="#">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <!-- Productos desplegable -->
                    <li class="nav-item">
                        <a class="nav-link text-white" data-bs-toggle="collapse" href="#productosCollapse" role="button" aria-expanded="false" aria-controls="productosCollapse">
                            <i class="bi bi-box-seam"></i> Productos
                        </a>
                        <div class="collapse" id="productosCollapse">
                            <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small ps-3">
                                
                                <li><a class="nav-link text-white" href="@Url.Action("Index", "Producto")">Agregar Producto</a></li>

                            </ul>
                        </div>
                    </li>
                    <!-- Ingresos desplegable -->
                    <li class="nav-item">
                        <a class="nav-link text-white" data-bs-toggle="collapse" href="#ingresosCollapse" role="button" aria-expanded="false" aria-controls="ingresosCollapse">
                            <i class="bi bi-cash-stack"></i> Ingresos
                        </a>
                        <div class="collapse" id="ingresosCollapse">
                            <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small ps-3">
                                <li><a class="nav-link text-white" href="@Url.Action("Index", "DetallesVenta")">Ver Ingresos</a></li>
                                <li><a class="nav-link text-white" href="@Url.Action("AgregarVenta", "DetallesVenta")">Agregar Ingreso</a></li>
                            </ul>
                        </div>
                    </li>
                    <!-- Gastos desplegable -->
                    <li class="nav-item">
                        <a class="nav-link text-white" data-bs-toggle="collapse" href="#gastosCollapse" role="button" aria-expanded="false" aria-controls="gastosCollapse">
                            <i class="bi bi-receipt"></i> Gastos
                        </a>
                        <div class="collapse" id="gastosCollapse">
                            <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small ps-3">
                                <li><a class="nav-link text-white" href="@Url.Action("Index", "Gastos")">Ver Gastos</a></li>
                                <li><a class="nav-link text-white" href="@Url.Action("AgregarGasto", "Gastos")">Agregar Gasto</a></li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Contenido Principal -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <h1 class="mt-4">Dashboard</h1>

            <!-- Tarjetas de resumen -->
            <div class="row my-4">
                <div class="col-md-4">
                    <div class="card bg-primary text-white shadow">
                        <div class="card-body">
                            <h5 class="card-title">Total Productos</h5>
                            <p class="card-text fs-3">150</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-success text-white shadow">
                        <div class="card-body">
                            <h5 class="card-title">Total Ingresos</h5>
                            <p class="card-text fs-3">$12,500</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-danger text-white shadow">
                        <div class="card-body">
                            <h5 class="card-title">Total Gastos</h5>
                            <p class="card-text fs-3">$3,200</p>
                        </div>
                    </div>
                </div>
            </div>

           


            <!-- Tabla de Productos -->
            <div class="card shadow mb-4">
                <div class="card-header bg-dark text-white">
                    <h5>Lista de Productos</h5>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Precio</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var producto in Model)
                            {
                                <tr>
                                    <td>@producto.Descripcion</td>
                                    <td>$@producto.PrecioFinal</td> <!-- O usa @producto.PrecioCosto si lo prefieres -->
                                    
                                    <td>
                                        <a asp-action="Editar" asp-route-id="@producto.IdProductos" class="btn btn-sm btn-warning">Editar</a>
                                        <a href="javascript:void(0);" class="btn btn-sm btn-danger"
                                           onclick="confirmarEliminacion(@producto.IdProductos,'/DashBoard/Eliminar')">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

