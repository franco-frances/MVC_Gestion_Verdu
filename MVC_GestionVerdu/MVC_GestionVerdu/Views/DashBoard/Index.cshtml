@model IEnumerable<Producto>



@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="row">
       
        <!-- Contenido Principal -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <h1 class="mt-4">Dashboard</h1>

            <!-- Tarjetas de resumen -->
            <div class="row my-4">
                <div class="col-md-4">
                    <div class="card bg-primary text-white shadow">
                        <div class="card-body">
                            <h5 class="card-title">Total Productos</h5>
                            <p class="card-text fs-3">150</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-success text-white shadow">
                        <div class="card-body">
                            <h5 class="card-title">Total Ingresos</h5>
                            <p class="card-text fs-3">$12,500</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-danger text-white shadow">
                        <div class="card-body">
                            <h5 class="card-title">Total Gastos</h5>
                            <p class="card-text fs-3">$3,200</p>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Buscador y Filtro -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <input type="text" id="buscador" class="form-control" placeholder="Buscar producto..." onkeyup="filtrarProductos()">
                </div>
                <div class="col-md-6">
                    <select id="filtroCategoria" class="form-select" onchange="filtrarProductos()">
                        <option value="">Todas las categorías</option>
                        @foreach (var categoria in ViewBag.Categorias)
                        {
                            <option value="@categoria.IdCategoria">@categoria.Descripcion</option>
                        }
                    </select>
                </div>
            </div>

           


            
            <!-- Tabla de Productos -->
            <div class="card shadow mb-4">
                <div class="card-header bg-dark text-white">
                    <h5>Lista de Productos</h5>
                </div>
                <div class="card-body">
                    <table class="table table-striped" id="tablaProductos">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Precio</th>
                                <th>Categoría</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var producto in Model)
                            {
                                <tr class="producto-row" data-categoria="@producto.CategoriaId">
                                    <td class="nombre">@producto.Descripcion</td>
                                    <td>$@producto.PrecioFinal</td>
                                    <td>@producto.Categoria.Descripcion</td> <!-- Si el modelo tiene la relación con Categoría -->
                                    <td>
                                        <a asp-action="Editar" asp-route-id="@producto.IdProductos" class="btn btn-sm btn-warning">Editar</a>
                                        <a href="javascript:void(0);" class="btn btn-sm btn-danger"
                                           onclick="confirmarEliminacion(@producto.IdProductos,'/DashBoard/Eliminar')">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Tabla de Ingresos -->
            <div class="card shadow mb-4">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5>Ingresos de Hoy</h5>
                    <!-- Botón de desplegar/ocultar -->
                    <button class="btn btn-sm btn-light" type="button" data-bs-toggle="collapse" data-bs-target="#ingresosHoy" aria-expanded="false" aria-controls="ingresosHoy">
                        <i class="bi bi-chevron-down"></i>
                    </button>
                </div>
                <div class="card-body collapse" id="ingresosHoy">
                    <!-- Estilo para la tabla de ingresos -->
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Concepto</th>
                                <th>Monto</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ingreso in ViewBag.IngresosHoy)
                            {
                                <tr>
                                    <td>@ingreso.Fecha.ToString("yyyy-MM-dd")</td>
                                    <td>@ingreso.Concepto</td>
                                    <td>@ingreso.Monto.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <!-- Total de los Ingresos de Hoy -->
                    <div class="alert alert-success">
                        <strong>Total de Ingresos de Hoy: </strong>
                        <span id="totalIngresosHoy">
                            @ViewBag.TotalIngresosHoy.ToString("C")
                        </span>
                    </div>
                </div>
            </div>

            <!-- Tabla de Gastos -->
            <div class="card shadow mb-4">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5>Gastos de Hoy</h5>
                    <!-- Botón de desplegar/ocultar -->
                    <button class="btn btn-sm btn-light" type="button" data-bs-toggle="collapse" data-bs-target="#gastosHoy" aria-expanded="false" aria-controls="gastosHoy">
                        <i class="bi bi-chevron-down"></i>
                    </button>
                </div>
                <div class="card-body collapse" id="gastosHoy">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Concepto</th>
                                <th>Monto</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var gasto in ViewBag.GastosHoy)
                            {
                                <tr>
                                    <td>@gasto.Fecha.ToString("yyyy-MM-dd")</td>
                                    <td>@gasto.Concepto</td>
                                    <td>@gasto.Monto.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <!-- Estilo para Total de Gastos de Hoy -->
                    <div class="alert alert-danger">
                        <strong>Total de Gastos de Hoy: </strong>
                        <span id="totalGastosHoy">
                            @ViewBag.TotalGastosHoy.ToString("C")
                        </span>
                    </div>
                </div>
            </div>

        </main>
    </div>
</div>

<!-- Bootstrap Icons (opcional) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
