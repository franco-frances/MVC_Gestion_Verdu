@model IEnumerable<Producto>

@{
    ViewData["Title"] = "Dashboard";
}


<div class="container-fluid">
    <div class="row justify-content-center">
        <!-- Contenido Principal Centrado -->
        <main class="col-md-9 col-lg-10 mx-auto px-md-4">
            <header class="my-4 text-center">
                <h1 class="display-4 text-primary fw-bold">Dashboard</h1>
            </header>

            <!-- Tarjetas de Resumen -->
            <div class="row my-4 g-4">
                <div class="col-md-4">
                    <div class="card-custom">
                        <div class="card-body">
                            <h3 class="card-title">Total Hoy</h3>
                            <p class="card-text">@ViewBag.TotalHoy.ToString("C")</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card-custom ingresos">
                        <div class="card-body">
                            <h3 class="card-title">Total Ingresos</h3>
                            <p class="card-text">@ViewBag.TotalIngresosHoy.ToString("C")</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card-custom gastos">
                        <div class="card-body">
                            <h3 class="card-title">Total Gastos</h3>
                            <p class="card-text">@ViewBag.TotalGastosHoy.ToString("C")</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Buscador y Filtro (sin alterar su funcionalidad) -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <input type="text" id="buscador" class="form-control rounded-pill shadow-sm" placeholder="Buscar producto..." onkeyup="filtrarProductos()">
                </div>
                <div class="col-md-6">
                    <select id="filtroCategoria" class="form-select rounded-pill shadow-sm" onchange="filtrarProductos()">
                        <option value="">Todas las categorías</option>
                        @foreach (var categoria in ViewBag.Categorias)
                        {
                            <option value="@categoria.IdCategoria">@categoria.Descripcion</option>
                        }
                    </select>
                </div>
            </div>

            <!-- Tabla de Productos -->
            <div class="card shadow rounded-3 mb-4">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Lista de Productos</h5>
                </div>
                <div class="card-body p-4">
                    <table class="table table-hover align-middle text-center" id="tablaProductos">
                        <thead class="table-dark">
                            <tr>
                                <th>Nombre</th>
                                <th>Precio</th>
                                <th>Categoría</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var producto in Model)
                            {
            <tr id="fila-@producto.IdProductos" class="producto-row" data-categoria="@producto.CategoriaId">
                <td class="nombre">@producto.Descripcion</td>
                <td>$@producto.PrecioFinal</td>
                <td>@producto.Categoria.Descripcion</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@producto.IdProductos" class="btn btn-sm btn-warning rounded-pill">Editar</a>
                    <a href="javascript:void(0);" class="btn btn-sm btn-danger rounded-pill" onclick="confirmarEliminacion(@producto.IdProductos, '/DashBoard/Eliminar')">Eliminar</a>
                </td>
            </tr>
                            }
</tbody>
                    </table>
                </div>
            </div>

            <!-- Sección de Ingresos -->
            <div class="card shadow rounded-3 mb-4">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Ingresos de Hoy</h5>
                    <button class="btn btn-sm btn-light" type="button" data-bs-toggle="collapse" data-bs-target="#ingresosHoy" aria-expanded="false" aria-controls="ingresosHoy">
                        <i class="bi bi-chevron-down"></i>
                    </button>
                </div>
                <div class="collapse" id="ingresosHoy">
                    <table class="table table-hover align-middle text-center">
                        <thead class="table-secondary">
                            <tr>
                                <th>Fecha</th>
                                <th>Concepto</th>
                                <th>Monto</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ingreso in ViewBag.IngresosHoy)
                            {
                                <tr>
                                    <td>@ingreso.Fecha.ToString("yyyy-MM-dd")</td>
                                    <td>@ingreso.Concepto</td>
                                    <td>@ingreso.Monto.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="alert alert-success text-center mt-3 shadow-sm rounded-3 p-2" style="max-width: 300px; margin: auto;">
                        <h6 class="fw-bold mb-1">
                            <i class="bi bi-cash-stack me-1"></i> Total de Ingresos
                        </h6>
                        <span id="totalIngresosHoy" class="fs-6 fw-semibold">@ViewBag.TotalIngresosHoy.ToString("C")</span>
                    </div>
                    <form asp-controller="DetallesVenta" asp-action="AgregarVenta" method="post" class="row g-3 align-items-center justify-content-center mt-3 mb-2">
                        <div class="col-md-3">
                            <select name="MetodoPagoId" class="form-select rounded-pill" required>
                                <option value="">Seleccionar</option>
                                @foreach (var metodo in ViewBag.MetodoPago)
                                {
                                    <option value="@metodo.IdMetodoPago">@metodo.Descripcion</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <input type="number" name="Monto" class="form-control rounded-pill" placeholder="Monto" required>
                        </div>
                        <input type="hidden" name="Fecha" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                        <input type="hidden" name="origen" value="ingresosRapidos">
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-primary w-100 rounded-pill">Agregar Ingreso</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Sección de Gastos -->
            <div class="card shadow rounded-3 mb-4">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Gastos de Hoy</h5>
                    <button class="btn btn-sm btn-light" type="button" data-bs-toggle="collapse" data-bs-target="#gastosHoy" aria-expanded="false" aria-controls="gastosHoy">
                        <i class="bi bi-chevron-down"></i>
                    </button>
                </div>
                <div class="collapse" id="gastosHoy">
                    <table class="table table-hover align-middle text-center">
                        <thead class="table-secondary">
                            <tr>
                                <th>Fecha</th>
                                <th>Concepto</th>
                                <th>Monto</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var gasto in ViewBag.GastosHoy)
                            {
                                <tr>
                                    <td>@gasto.Fecha.ToString("yyyy-MM-dd")</td>
                                    <td>@gasto.Concepto</td>
                                    <td>@gasto.Monto.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="alert alert-danger text-center mt-3 shadow-sm rounded-3 p-2" style="max-width: 300px; margin: auto;">
                        <h6 class="fw-bold mb-1">
                            <i class="bi bi-cart-dash me-1"></i> Total de Gastos
                        </h6>
                        <span id="totalGastosHoy" class="fs-6 fw-semibold">@ViewBag.TotalGastosHoy.ToString("C")</span>
                    </div>

                    <form asp-controller="Gastos" asp-action="AgregarGasto" method="post" class="row g-3 align-items-center justify-content-center mt-3 mb-2">
                        <div class="col-md-4">
                            <input type="text" name="Concepto" class="form-control rounded-pill" placeholder="Concepto" required>
                        </div>
                        <div class="col-md-3">
                            <input type="number" name="Monto" class="form-control rounded-pill" placeholder="Monto" required>
                        </div>
                        <input type="hidden" name="Fecha" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                        <input type="hidden" name="origen" value="gastosRapidos">
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-danger w-100 rounded-pill">Agregar Gasto</button>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>
</div>




