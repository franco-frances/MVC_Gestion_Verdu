@model MVC_GestionVerdu.ViewModels.ProductoViewModel

<!-- Modal para agregar y editar productos -->
<div class="modal fade" id="modalProducto" tabindex="-1" aria-labelledby="modalProductoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalProductoLabel">Agregar Producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formProducto" method="post" asp-action="AgregarProducto">
                    <!-- Input oculto para Id -->
                    <input type="hidden" asp-for="Id" id="IdProducto" />

                    <div class="mb-3">
                        <label asp-for="Descripcion" class="form-label"></label>
                        <input asp-for="Descripcion" class="form-control" id="Descripcion" />
                        <span asp-validation-for="Descripcion" class="invalid-feedback"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CategoriaId" class="form-label"></label>
                        <select asp-for="CategoriaId" class="form-select" id="CategoriaId"
                                asp-items="@(new SelectList(Model.Categorias, "Id", "Descripcion"))">
                            <option value="">Seleccione una categoría</option>
                        </select>
                        <span asp-validation-for="CategoriaId" class="invalid-feedback"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PrecioCajon" class="form-label"></label>
                            <input asp-for="PrecioCajon" class="form-control" id="PrecioCajon" />
                            <span asp-validation-for="PrecioCajon" class="invalid-feedback"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PesoCajon" class="form-label"></label>
                            <input asp-for="PesoCajon" class="form-control" id="PesoCajon" />
                            <span asp-validation-for="PesoCajon" class="invalid-feedback"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MargenGanancia" class="form-label"></label>
                        <input asp-for="MargenGanancia" class="form-control" id="MargenGanancia" />
                        <span asp-validation-for="MargenGanancia" class="invalid-feedback"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PrecioCosto" class="form-label"></label>
                            <input asp-for="PrecioCosto" class="form-control no-validate" id="PrecioCosto" readonly
                                   style="background-color: #e7f1ff; border: 2px solid #007bff;" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PrecioFinal" class="form-label"></label>
                            <input asp-for="PrecioFinal" class="form-control no-validate" id="PrecioFinal" readonly
                                   style="background-color: #e7f1ff; border: 2px solid #007bff;" />
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="tempMensaje" value="@TempData["MensajeProductos"]" />
<input type="hidden" id="tempTipoMensaje" value="@TempData["TipoMensajeProductos"]" />