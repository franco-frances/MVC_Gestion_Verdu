@model IEnumerable<Producto>

<!-- Modal para agregar y editar productos -->
<div class="modal fade" id="modalProducto" tabindex="-1" aria-labelledby="modalProductoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalProductoLabel">Agregar Producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formProducto" method="post">

                    <input type="hidden" id="IdProducto" name="IdProductos" />


                    <div class="mb-3">
                        <label for="Descripcion" class="form-label">Nombre</label>
                        <input type="text" id="Descripcion" name="Descripcion" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="CategoriaId" class="form-label">Categoría</label>
                        <select id="CategoriaId" name="CategoriaId" class="form-select" required>
                            <option value="">Seleccione una categoría</option>
                            @foreach (var categoria in ViewBag.Categorias)
                            {
                                <option value="@categoria.IdCategoria">@categoria.Descripcion</option>
                            }
                        </select>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="PrecioCajon" class="form-label">Precio del Cajón ($)</label>
                            <input type="number" id="PrecioCajon" name="PrecioCajon" class="form-control" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="PesoCajon" class="form-label">Peso del Cajón (kg)</label>
                            <input type="number" id="PesoCajon" name="PesoCajon" class="form-control" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="MargenGanancia" class="form-label">Porcentaje de Ganancia (%)</label>
                        <input type="number" id="MargenGanancia" name="MargenGanancia" class="form-control" required>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="PrecioCosto" class="form-label">Precio Costo x Kg ($)</label>
                            <input type="number" id="PrecioCosto" name="PrecioCosto" class="form-control" style="background-color: #e7f1ff; border: 2px solid #007bff;" readonly>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="PrecioFinal" class="form-label">Precio Final ($)</label>
                            <input type="number" id="PrecioFinal" name="PrecioFinal" class="form-control" style="background-color: #e7f1ff; border: 2px solid #007bff;" readonly>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<input type="hidden" id="tempMensaje" value="@TempData["MensajeProductos"]" />
<input type="hidden" id="tempTipoMensaje" value="@TempData["TipoMensajeProductos"]" />