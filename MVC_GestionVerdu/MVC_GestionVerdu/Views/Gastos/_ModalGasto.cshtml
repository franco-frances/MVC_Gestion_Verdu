@model MVC_GestionVerdu.ViewModels.GastoViewModel

<!-- Modal para Agregar/Editar Gastos -->
<div class="modal fade" id="modalAgregarGasto" tabindex="-1" aria-labelledby="modalAgregarGastoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="modalTituloGasto">Agregar Gasto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formGasto" method="post" asp-action="AgregarGasto">
                    <!-- Campo oculto para el ID -->
                    <input type="hidden" asp-for="Id" id="idGasto" />

                    <div class="mb-3">
                        <label asp-for="Fecha" class="form-label"></label>
                        <input asp-for="Fecha" type="date" class="form-control" id="fecha" />
                        <span asp-validation-for="Fecha" class="invalid-feedback"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Concepto" class="form-label"></label>
                        <input asp-for="Concepto" class="form-control" id="concepto" />
                        <span asp-validation-for="Concepto" class="invalid-feedback"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Monto" class="form-label"></label>
                        <input asp-for="Monto" class="form-control" id="monto" step="0.01" />
                        <span asp-validation-for="Monto" class="invalid-feedback"></span>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="tempMensaje" value="@TempData["MensajeGastos"]" />
<input type="hidden" id="tempTipoMensaje" value="@TempData["TipoMensajeGastos"]" />
