@model IEnumerable<MVC_GestionVerdu.Models.Gastos>

<h1>Gastos</h1>

<div class="row mb-3">
    <div class="col-md-5">
        <label for="fechaInicio" class="form-label">Desde:</label>
        <input type="date" id="fechaInicio" class="form-control">
    </div>
    <div class="col-md-5">
        <label for="fechaFin" class="form-label">Hasta:</label>
        <input type="date" id="fechaFin" class="form-control">
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <button class="btn btn-primary w-100" onclick="filtrarGastos()">Filtrar</button>
    </div>
</div>

<div class="alert alert-info mt-3">
    <strong>Total de Gastos: </strong> <span id="totalGastos">$0.00</span>
</div>

<div class="mt-3 text-center">
    <button id="btnAgregarGasto" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modalAgregarGasto">
        Agregar Gasto
    </button>
</div>

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h5>Lista de Gastos</h5>
        </div>
        <div class="card-body">
            <table id="tablaGastos" class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Fecha</th>
                        <th>Concepto</th>
                        <th>Monto ($)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var gasto in Model)

                    {
                        <tr class="gasto-row" data-id="@gasto.IdGasto">
                            <td class="fecha">@gasto.Fecha.ToString("yyyy-MM-dd")</td>
                            <td class="concepto">@gasto.Concepto</td>
                           
                            <td class="monto">@gasto.Monto.ToString("F2")</td>
                            <td>
                                <button class="btn btn-sm btn-warning btnEditarGasto"
                                        data-id="@gasto.IdGasto"
                                        data-fecha="@gasto.Fecha.ToString("yyyy-MM-dd")"
                                        data-concepto="@gasto.Concepto"
                                        data-monto="@gasto.Monto">
                                    Editar
                                </button>
                                <a href="javascript:void(0);" class="btn btn-sm btn-danger"
                                   onclick="confirmarEliminacion(@gasto.IdGasto, '/Gastos/Eliminar')">
                                    Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal para Agregar/Editar Gastos -->
<div class="modal fade" id="modalAgregarGasto" tabindex="-1" aria-labelledby="modalAgregarGastoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <!--  título dinámico -->
                <h5 class="modal-title" id="modalTituloGasto">Agregar Gasto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formGasto">
                    <!-- Campo oculto para el ID del gasto -->
                    <input type="hidden" id="idGasto" name="IdGasto">

                    <div class="mb-3">
                        <label for="fecha" class="form-label">Fecha:</label>
                        <!-- NOTA: El input de tipo "date" requiere el formato yyyy-MM-dd -->
                        <input type="date" class="form-control" id="fecha" name="Fecha" value="@DateTime.Now.ToString("yyyy-MM-dd")" required>
                    </div>
                    <div class="mb-3">
                        <label for="concepto" class="form-label">Concepto:</label>
                        <input type="text" class="form-control" id="concepto" name="Concepto" required>
                    </div>
                    <div class="mb-3">
                        <label for="monto" class="form-label">Monto:</label>
                        <input type="number" step="0.01" class="form-control" id="monto" name="Monto" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/js/Gastos.js" asp-append-version="true"></script>
    
    }



