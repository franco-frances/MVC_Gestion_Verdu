@model IEnumerable<MVC_GestionVerdu.Models.Gastos>

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h5>Lista de Gastos</h5>
        </div>
        <div class="card-body">
            <table id="tablaGastos" class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Fecha</th>
                        <th>Concepto</th>
                        <th>Monto ($)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var gasto in Model)

                    {
                        <tr>
                            <td>@gasto.Fecha.ToString("dd/MM/yyyy")</td>
                            <td>@gasto.Concepto</td>
                            <td>@gasto.Monto.ToString("C")</td>
                            <td>
                                <a asp-action="Editar" asp-route-id="@gasto.IdGasto" class="btn btn-sm btn-warning">Editar</a>
                                <a href="javascript:void(0);" class="btn btn-sm btn-danger" onclick="confirmarEliminacion(@gasto.IdGasto,'/Gastos/Eliminar')">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>