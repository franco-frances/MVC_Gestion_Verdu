@model MVC_GestionVerdu.Models.Gastos


<div class="container mt-5">
    <h2 class="text-center mb-4">Registrar Gasto</h2>
    <form asp-action="AgregarGasto" method="post" class="border p-4 rounded bg-light shadow-sm">
        <div class="form-group">
            <label asp-for="Fecha"></label>
            <input asp-for="Fecha" class="form-control" type="date" required>
        </div>
                
        <div class="form-group">
            <label asp-for="Concepto"></label>
            <input asp-for="Concepto" class="form-control" placeholder="Descripción del Gasto" required>
        </div>

        <div class="form-group">
            <label asp-for="Monto"></label>
            <input asp-for="Monto" class="form-control" type="number" step="0.01" placeholder="Ingrese el monto" required>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success btn-lg">Registrar Gasto</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg ml-2">Cancelar</a>
        </div>


        @if (TempData["MensajeGasto"] != null)

        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["MensajeGasto"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }


    </form>
</div>