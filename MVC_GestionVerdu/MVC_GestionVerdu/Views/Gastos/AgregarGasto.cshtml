@model MVC_GestionVerdu.Models.Gastos

<div class="container mt-5">
    <h2 class="text-center mb-4">Registrar Gasto</h2>

    @if (TempData["MensajeGasto"] != null)

    {
        <div class="alert alert-success alert-dismissible fade show text-center mx-auto w-50" role="alert">
            @TempData["MensajeGasto"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-center">
        <form asp-action="AgregarGasto" method="post" class="border p-4 rounded bg-light shadow-sm w-50">
            <div class="mb-3">
                <label asp-for="Fecha" class="form-label fw-bold"></label>
                <input asp-for="Fecha" class="form-control" type="date" required>
            </div>

            <div class="mb-3">
                <label asp-for="Concepto" class="form-label fw-bold"></label>
                <input asp-for="Concepto" class="form-control" placeholder="Descripción del Gasto" required>
            </div>

            <div class="mb-4">
                <label asp-for="Monto" class="form-label fw-bold"></label>
                <input asp-for="Monto" class="form-control" type="number" step="0.01" placeholder="Ingrese el monto" required>
            </div>

            <!-- Contenedor para centrar los botones -->
            <div class="d-flex justify-content-center gap-3">
                <button type="submit" class="btn btn-danger btn-lg px-4">Registrar Gasto</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg px-4">Cancelar</a>
            </div>
        </form>
    </div>
</div>
